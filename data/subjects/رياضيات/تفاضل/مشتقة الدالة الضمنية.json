{
  "اسم_الدرس": "مشتقة الدالة الضمنية",
  "تعريفات": [
    {
      "النص": "ص = س³ + 1 (دالة صريحة)"
    },
    {
      "النص": "س ص² + س³ ص = 1 (دالة ضمنية)"
    }
  ],
  "حالات": [
    {
      "العنوان": "قاعدة (الاشتقاق السريع)",
      "الشرح": "نضع جميع حدود الدالة في طرف واحد ثم نطبق القاعدة التالية: ص' = - ( مشتقة الدالة بالنسبة لـ س باعتبار أن ص ثابتاً ) / ( مشتقة الدالة بالنسبة لـ ص باعتبار أن س ثابتاً )."
    }
  ],
  "أمثلة_محلولة": [
    {
      "السؤال": "1) أوجد مشتقة: ص² + س ص + س² = 5",
      "خطوات_الحل": [
        "نشتق بالنسبة لـ س:",
        "2ص ص' + (س ص' + 1 × ص) + 2س = 0",
        "2ص ص' + س ص' + ص + 2س = 0",
        "نأخذ ص' عامل مشترك:",
        "ص' (2ص + س) = -ص - 2س",
        "ص' = (-ص - 2س) / (2ص + س)",
        "--- حل آخر باستخدام القاعدة ---",
        "نجعل المعادلة صفرية: ص² + س ص + س² - 5 = 0",
        "ص' = - ( ص + 2س ) / ( 2ص + س )",
        "ص' = ( -ص - 2س ) / ( 2ص + س )"
      ],
      "النتيجة": "(-ص - 2س) / (2ص + س)"
    },
    {
      "السؤال": "2) أوجد مشتقة: ص + جذر(ص) = س",
      "خطوات_الحل": [
        "نشتق بالنسبة لـ س:",
        "ص' + ص' / (2 جذر(ص)) = 1",
        "ص' [ 1 + 1/(2 جذر(ص)) ] = 1",
        "نوحد المقامات داخل القوس:",
        "ص' [ (2 جذر(ص) + 1) / (2 جذر(ص)) ] = 1",
        "ص' = ( 2 جذر(ص) ) / ( 2 جذر(ص) + 1 )",
        "--- حل آخر باستخدام القاعدة ---",
        "نجعل المعادلة صفرية: ص + جذر(ص) - س = 0",
        "ص' = - ( -1 ) / ( 1 + 1/(2 جذر(ص)) )",
        "بضرب البسط والمقام في 2 جذر(ص):",
        "ص' = ( 2 جذر(ص) ) / ( 2 جذر(ص) + 1 )"
      ],
      "النتيجة": "( 2 جذر(ص) ) / ( 2 جذر(ص) + 1 )"
    },
    {
      "السؤال": "3) أوجد مشتقة: ص جا س + س جا ص = 1",
      "خطوات_الحل": [
        "نشتق بالنسبة لـ س:",
        "(ص جتا س + ص' جا س) + (س جتا ص ص' + 1 جا ص) = 0",
        "ص' (جا س + س جتا ص) = - (ص جتا س + جا ص)",
        "ص' = -(ص جتا س + جا ص) / (جا س + س جتا ص)",
        "--- حل آخر باستخدام القاعدة ---",
        "نجعل المعادلة صفرية: ص جا س + س جا ص - 1 = 0",
        "ص' = - ( ص جتا س + جا ص ) / ( جا س + س جتا ص )"
      ],
      "النتيجة": "-(ص جتا س + جا ص) / (جا س + س جتا ص)"
    },
    {
      "السؤال": "4) أوجد مشتقة: ص² = جتا(س + ص)",
      "خطوات_الحل": [
        "نشتق بالنسبة لـ س:",
        "2ص ص' = -جا(س + ص) (1 + ص')",
        "2ص ص' = -جا(س + ص) - ص' جا(س + ص)",
        "2ص ص' + ص' جا(س + ص) = -جا(س + ص)",
        "ص' (2ص + جا(س + ص)) = -جا(س + ص)",
        "ص' = -جا(س + ص) / (2ص + جا(س + ص))",
        "--- حل آخر باستخدام القاعدة ---",
        "نجعل المعادلة صفرية: ص² - جتا(س + ص) = 0",
        "ص' = - [ -( -جا(س + ص) ) ] / [ 2ص - ( -جا(س + ص) ) ]",
        "ص' = -جا(س + ص) / ( 2ص + جا(س + ص) )"
      ],
      "النتيجة": "-جا(س + ص) / (2ص + جا(س + ص))"
    }
  ],
  "ملاحظات": [
    "قاعدة الاشتقاق السريع (الجزئي) تسهل الحل في خيارات المتعدد، ولكن يجب توحيد المعادلة بجعلها تساوي صفر أولاً.",
    "الرمز (ص') هو المشتقة الأولى دص/دس."
  ]
}